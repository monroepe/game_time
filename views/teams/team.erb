<body class = "<%= team %>">
<h1><%= team %></h1>

<h2>Record</h2>
<table>
  <tr>
    <th>Team</th>
    <th>Wins</th>
    <th>Loses</th>
  </tr>
  <tr>
  <td><%= team %></td>
  <td><%= record[0] %></td>
  <td><%= record[1] %></td>
</tr>

</table>

<h2>Season Results</h2>

<table>
  <tr>
    <th>Opponent</th>
    <th><%= team %></th>
    <th>Opponent</th>
  </tr>
  <% scores.each do |game| %>
  <tr>
    <td><a href = "/<%= game[:opponent] %>" class = "team"><%= game[:opponent] %></a></td>
    <td><%= game[:team_score] %></td>
    <td><%= game[:opponent_score] %></td>
  </tr>
  <% end %>
</table>


<br>
<a href="/" class = "back_button">Back to Homepage</a>

</body>
