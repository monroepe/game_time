<h1><%= team %></h1>

<table>
  <tr>
    <th>Team</th>
    <th>Wins</th>
    <th>Loses</th>
  </tr>
  <tr>
  <td><%= team %></td>
  <td><%= record[0] %></td>
  <td><%= record[1] %></td>
</tr>

</table>

<h2>Season Results</h2>

<table>
  <tr>
    <th>Opponent</th>
    <th><%= team %> Score</th>
    <th>Opponent Score</th>
  </tr>
  <% scores.each do |game| %>
  <tr>
    <td class = "team"><%= game[:opponent] %></td>
    <td><%= game[:team_score] %></td>
    <td><%= game[:opponent_score] %></td>
  </tr>
  <% end %>
</table>


